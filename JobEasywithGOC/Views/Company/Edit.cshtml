@{
    ViewData["Title"] = "Edit";
}
@model CompanyViewModel
<partial name="_menu"/>
<h2>Update a Company</h2>

<div class="wb-frmvld">
<form asp-action="Edit" method="post">
  
  <div class="form-group"> 

    <label asp-for="@Model.Name" class="required"><span class="field-name">Company Name</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required"})
  </div>

  <div class="form-group">

    <label asp-for="@Model.Industry" class="required"><span class="field-name">Company Industry</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.Industry, new { @class = "form-control", @required = "required"})

  </div>

  <div class="form-group">

    <label asp-for="@Model.Phone" class="required"><span class="field-name">Phone Number</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @required = "required"})

  </div>

  <div class="form-group">

    <label asp-for="@Model.Address1" class="required"><span class="field-name">Company Address1</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control", @required = "required"})

  </div>
  <div class="form-group">

    <label asp-for="@Model.Address2" class="required"><span class="field-name">Company Address2</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", @required = "required"})

  </div>

  <div class="form-group">

    <label asp-for="@Model.City" class="required"><span class="field-name">City</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.City, new { @class = "form-control", @required = "required"})

  </div>

 
<div class="form-group">

    <label asp-for="@Model.PostalCode" class="required"><span class="field-name">Postal Code</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @required = "required"})

  </div>

  <div class="form-group">

    <label asp-for="@Model.Email" class="required"><span class="field-name">Email Address</span> <strong class="required">(required)</strong></label>
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required"})

  </div>


 

  <div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary">
        <a asp-controller="Company" asp-action="Index"class="btn btn-default" role="button">Back to List</a>
  </div>


</form>
</div>